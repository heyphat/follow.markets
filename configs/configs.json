{
  "env": "development",  
  "server": {
    "host": "",
    "port": 6868,
    "limit": 5,
    "timeout": {
      "read": 10,
      "write": 10,
      "idle": 10
    }
  },
  "datadog": {
    "host": "",
    "port": "8126",
    "env": "development|production",
    "service": "follow.market",
    "version": "0.1.0"
  },
  "market": {
    "provider": {
      "binance": {
        "api_key": "your_key",
        "secret_key": "your_key"
      },
      "alpaca": {
        "api_key": "your_key",
        "secret_key": "your_key"
      }
    },
    "notifier": {
      "telegram": {
        "bot_token": "telegram_bot_token",
        "chat_ids": [
          "telegrame_chat_id_1",
          "telegrame_chat_id_2"
        ] 
      }
    },
    "watcher": {
      "watchlist": [
       "(?=(?<!(BUSD|BVND|PAX|DAI|TUSD|USDC|VAI|BRL|AUD|BIRD|EUR|GBP|BIDR|DOWN|UP|BEAR|BULL))USDT)(?=USDT$)"
      ],
      "runner": {
        "frames": [
          60, 300
        ],
        "indicators": {
          "MovingAverge": [9, 26, 50],
          "VolumeMovingAverage": [200],
          "ExponentialMovingAverage": [99, 200],
          "BollingerUpperBand": [26, 50],
          "BollingerLowerBand": [26, 50],
          "AverageTrueRage": [10]
        }
      }
    },
    "evaluator": {
      "signal": {
        "source_path": "./configs/signals"
      }
    },
    "tester": {
      "save_path": "./configs/test_results",
      "init_balance": 10000,
      "profit_margin": 0.1,
      "loss_tolerance": 0.05
    }
  }
}
